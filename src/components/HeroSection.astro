---
const { title, description, avatar, worksCount } = Astro.props;

// separate last word for styling
const words = title.split(" ");
const lastWord = words.pop();
const rest = words.join(" ");
---

<div class="text-center space-y-4 text-sm md:text-basez">
  <img
    class="w-40 md:w-52 rounded-full mx-auto ring-2 ring-violet-400/40 drop-shadow-lg animate-float"
    src={avatar}
    alt={title}
  />
  <h1 class="text-3xl md:text-5xl font-bold drop-shadow-md">
    {rest}
    <span class="text-violet-400">{lastWord}</span>
  </h1>

  <p class="text-sm md:text-base leading-relaxed opacity-80 max-w-md mx-auto">
    {description}
  </p>

  <div class="flex gap-8 justify-center mt-6 text-sm">
    <div class="px-4 py-2 rounded-lg bg-violet-400/10 backdrop-blur-sm">
      ğŸ“‚ {worksCount} Projects
    </div>
    <div class="px-4 py-2 rounded-lg bg-violet-400/10 backdrop-blur-sm">
      ğŸ“ Notes & Docs
    </div>
  </div>

  <div class="mt-8 flex gap-4 justify-center">
    <a
      href="/work"
      class="px-6 py-2 rounded-full font-bold bg-violet-400/30 hover:scale-105 transition"
    >
      Explore Works
    </a>
    <a
      href="/notes"
      class="px-6 py-2 rounded-full font-bold bg-violet-400/30 hover:scale-105 transition"
    >
      Read Notes
    </a>
    <a
      href="/contact"
      class="px-6 py-2 rounded-full font-bold bg-violet-400/30 hover:scale-105 transition"
    >
      Contact
    </a>
  </div>

  <!-- <p class="text-sm md:text-base opacity-60 italic tracking-wide">
    
  </p> -->
</div>
