---
const links = [
  { href: "/", label: "home" },
  { href: "/blog", label: "blog" },
  { href: "/works", label: "works" },
];
---

<div class="fixed bottom-0 left-1/2 transform -translate-x-1/2 z-50 flex flex-col items-center">
  
  <!-- Toggle input -->
  <input type="checkbox" id="menu-toggle" class="hidden peer" />

  <!-- Arrow button half-visible -->
  <label
    for="menu-toggle"
    class="cursor-pointer flex items-center justify-center w-14 h-6 -mb-2 relative z-10 overflow-hidden 
           bg-gradient-to-r from-violet-400 to-violet-500 dark:from-violet-700 dark:to-violet-800 
           rounded-t-full shadow-lg transition-all duration-300 peer-checked:rounded-full peer-checked:-translate-y-10"
    aria-label="Toggle menu"
  >
    <svg
      class="w-6 h-6 text-white absolute -top-1 left-1/2 transform -translate-x-1/2 rotate-0 peer-checked:rotate-180 transition-transform duration-300"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
    </svg>
  </label>

  <!-- Expanded menu horizontal -->
  <ul
    class="absolute bottom-full mb-2 flex gap-4 opacity-0 scale-90 translate-y-4 pointer-events-none 
           transition-all duration-300 peer-checked:opacity-100 peer-checked:scale-100 peer-checked:translate-y-0 peer-checked:pointer-events-auto"
  >
    {links.map((l) => (
      <li>
        <a
          href={l.href}
          class="inline-block px-5 py-2 rounded-full bg-gradient-to-r from-purple-200 to-purple-300 dark:from-purple-800 dark:to-purple-700 
                 text-xs font-semibold shadow-lg hover:scale-105 hover:brightness-110 transition-transform"
        >
          {l.label}
        </a>
      </li>
    ))}
  </ul>
</div>
